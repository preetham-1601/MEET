<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/app_logo"/>
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/app_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etEmail"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="8"
        android:maxLines="1"
        android:padding="10dp"
        android:background="@drawable/edt_background"
        />
    <TextView
        android:id="@+id/txtInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="SELECT INTEREST"
        android:textSize="25sp"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_below="@id/txtInterest">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Sports" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/checkBox1"
            android:text="Music" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/checkBox2"
            android:text="Games" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"

            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/checkBox3"
            android:text="TV and Film" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox1"
            android:layout_marginLeft="10dp"
            android:text="Religion and spirituality" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/checkBox5"
            android:text="News and Politics" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox5"
            android:layout_marginLeft="10dp"
            android:text="Health and Fitness" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox5"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/checkBox7"
            android:text="Business and Finance" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox5"
            android:layout_marginLeft="-97dp"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@id/checkBox8"
            android:text="Arts" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox7"
            android:layout_marginLeft="10dp"
            android:text="Education" />

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox7"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="41dp"
            android:layout_toRightOf="@id/checkBox10"
            android:text="Science and Medicine" />

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox7"
            android:layout_marginLeft="-206dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/checkBox11"
            android:text="Technology" />

        <CheckBox
            android:id="@+id/checkBox13"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:text="Government" />
    </RelativeLayout>


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="129dp"
        android:background="@drawable/btn_background"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>